FROM alpine

LABEL maintainer=lnoirot@student.42.fr

##################################################################################################
#                                       Install MySql                                            #
##################################################################################################

RUN apk update && apk add \
    && apk add bash mysql mysql-client

##################################################################################################
#                                          Install php7                                          #
##################################################################################################

COPY mysql_install.sh /tmp
COPY mysql_users.sql /tmp
COPY my.cnf /etc/

CMD sh /tmp/mysql_install.sh

EXPOSE 3306